@model IzinSistemi.Models.Entity.Personel
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<style>
    body {
        background: linear-gradient(to top, #e0b3ff, white);
    }

    .form-control {
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
    }

    .btn {
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
    }

    .card {
        max-width: 800px;
        margin: 20px auto;
    }

    .card-body {
        padding: 1rem;
    }

    .card-title {
        font-size: 1.25rem;
        text-align: center;
        margin-bottom: 1rem;
    }
</style>

<div class="container">
    <div class="card shadow p-3 mb-5 bg-body rounded">
        <div class="card-body">
            <h2 class="card-title">Personel ve İzin Bilgileri Girişi</h2>

            <form class="form-group" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="Isim" class="form-label">Personel Adı</label>
            
                            @Html.TextBoxFor(k => k.Isim, new { @class = "form-control" })
                            @Html.ValidationMessageFor(k=>k.Isim,"",new { @style="color:red"})
                        </div>
                        <div class="mb-3">
                            <label for="Soyisim" class="form-label">Soyadı</label>

                            @Html.TextBoxFor(k => k.Soyisim, new { @class = "form-control" })
                            @Html.ValidationMessageFor(k => k.Soyisim, "", new { @style = "color:red" })
                        </div>
                        <div class="mb-3">
                            <label for="KullanıcıAdı" class="form-label">Kullanıcı Adı</label>

                            @Html.TextBoxFor(k => k.KullanıcıAdı, new { @class = "form-control" })
                            @Html.ValidationMessageFor(k => k.KullanıcıAdı, "", new { @style = "color:red" })
                        </div>
                        <div class="mb-3">
                            <label for="Telefon" class="form-label">Telefon No </label>

                            @Html.TextBoxFor(k => k.Telefon, new { @class = "form-control" })
                            @Html.ValidationMessageFor(k => k.Telefon, "", new { @style = "color:red" })
                        </div>
                        <div class="mb-3">
                            <label for="Mail" class="form-label">Mail</label>

                            @Html.TextBoxFor(k => k.Mail, new { @class = "form-control" })
                            @Html.ValidationMessageFor(k => k.Mail, "", new { @style = "color:red" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="ToplamIzin" class="form-label">Toplam Izin</label>

                            @Html.TextBoxFor(k => k.ToplamIzin, new { @class = "form-control" })
                            @Html.ValidationMessageFor(k => k.ToplamIzin, "", new { @style = "color:red" })
                        </div>
                        <div class="mb-3">
                            <label for="KullanılanIzin" class="form-label">Kullanılan İzin</label>

                            @Html.TextBoxFor(k => k.KullanılanIzin, new { @class = "form-control" })
                            @Html.ValidationMessageFor(k => k.KullanılanIzin, "", new { @style = "color:red" })
                        </div>
                        <div class="mb-3">
                            <label for="KalanIzin" class="form-label">Kalan İzin</label>

                            @Html.TextBoxFor(k => k.KalanIzin, new { @class = "form-control" })
                            @Html.ValidationMessageFor(k => k.KalanIzin, "", new { @style = "color:red" })
                        </div>
                        
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-info">Ekle</button>
                </div>

            </form>
        </div>
    </div>
</div>
